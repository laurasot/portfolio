---
interface Props {
    title?: string;
    description?: string;
}

const { 
    title = 'Laura Soto',
    description = 'Laura - Portfolio personal'
} = Astro.props;
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <link rel="icon" type="image/png" href="/ico.png" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="description" content={description} />
        <meta name="author" content="Laura" />
        <meta name="theme-color" content="#fdfbf7" />
        <title>{title}</title>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&family=Syne:wght@400;500;600;700&family=Space+Grotesk:wght@300;400;500;600&display=swap" rel="stylesheet">
    </head>
    <body>
        <slot />
    </body>
</html>

<style is:global>
    @import '../styles/global.css';
</style>

